---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<BaseLayout title="Contact — Hawshemi">
  <Fragment slot="header"><Header /></Fragment>

  <section class="max-w-2xl mx-auto">
    <div class="glass-card p-8 text-center">
      <h1 class="text-3xl font-bold tracking-tight mb-4">Contact</h1>
      <p class="text-text-secondary mb-8 text-lg">Email is best. I’ll reply as soon as possible.</p>
      <div>
        <a href="mailto:contact@hawshemi.com" class="btn-primary text-lg px-8 py-3">contact@hawshemi.com</a>
      </div>
    </div>
  </section>

  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>


