---
import type { HTMLAttributes } from 'astro/types';

type AnchorProps = HTMLAttributes<'a'>;
type ButtonProps = HTMLAttributes<'button'>;

interface Props {
  variant?: 'primary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
  [key: string]: any;
}

const { 
  variant = 'primary', 
  size = 'md', 
  href, 
  class: className,
  ...props 
} = Astro.props;

const baseStyles = "inline-flex items-center justify-center rounded-full font-semibold transition-all duration-200 ease-in-out cursor-pointer";

const variants = {
  primary: "bg-accent text-black hover:bg-accent/90",
  ghost: "bg-white/5 text-text hover:bg-white/10",
};

const sizes = {
  sm: "px-4 py-2 text-sm",
  md: "px-6 py-2.5 text-base",
  lg: "px-8 py-3 text-lg",
};

const classes = [
  baseStyles,
  variants[variant],
  sizes[size],
  className,
].filter(Boolean).join(' ');

const Element = href ? 'a' : 'button';
---

<Element href={href} class={classes} {...props}>
  <slot />
</Element>
