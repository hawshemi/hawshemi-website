---
import { siteTitle, siteDescription, defaultLang, ui } from '../i18n/ui';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  locale?: string;
  type?: 'website' | 'article';
}

const { 
  title, 
  description, 
  image,
  locale = defaultLang,
  type = 'website' 
} = Astro.props;

const t = ui[locale as keyof typeof ui] || ui[defaultLang];
const baseSiteTitle = t['site.title'];

const metaTitle = title 
  ? (title.includes(baseSiteTitle) ? title : `${title} | ${baseSiteTitle}`)
  : `${baseSiteTitle} | ${t['site.description']}`;

const metaDescription = description || t['site.description'];
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image || '/social-card.png', Astro.site);

// Alternate language URL
const isFa = locale === 'fa';
const currentPath = Astro.url.pathname;
const altLang = isFa ? 'en' : 'fa';
const altPath = isFa 
  ? currentPath.replace(/^\/fa/, '') || '/' 
  : `/fa${currentPath === '/' ? '' : currentPath}`;
const altURL = new URL(altPath, Astro.site);
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="generator" content={Astro.generator} />

<!-- Primary Meta Tags -->
<title>{metaTitle}</title>
<meta name="title" content={metaTitle} />
<meta name="description" content={metaDescription} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={metaTitle} />
<meta property="og:description" content={metaDescription} />
<meta property="og:image" content={socialImageURL} />
<meta property="og:locale" content={locale} />
<meta property="og:site_name" content={baseSiteTitle} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={metaTitle} />
<meta property="twitter:description" content={metaDescription} />
<meta property="twitter:image" content={socialImageURL} />

<!-- Alternate Languages -->
<link rel="alternate" hreflang={locale} href={canonicalURL} />
<link rel="alternate" hreflang={altLang} href={altURL} />
<link rel="alternate" hreflang="x-default" href={isFa ? altURL : canonicalURL} />

<!-- Favicons -->
<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="manifest" href="/site.webmanifest" />
<meta name="theme-color" content="#050507" />
<link rel="sitemap" href="/sitemap-index.xml" />
