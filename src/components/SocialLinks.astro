---
const links = [
  { label: 'GitHub', href: 'https://github.com/hawshemi' },
  { label: 'LinkedIn', href: 'https://www.linkedin.com/hawshemi?_l=en_US' },
  { label: 'X', href: 'https://x.com/hawshemi' },
  { label: 'Instagram', href: 'https://www.instagram.com/rhawshemi/' },
];
---
<ul class="flex flex-wrap items-center gap-x-4 gap-y-2">
  {links.map((l) => (
    <li>
      <a class="text-text-secondary hover:text-text transition-colors duration-200" href={l.href} target="_blank" rel="noopener noreferrer">{l.label}</a>
    </li>
  ))}
  
</ul>


