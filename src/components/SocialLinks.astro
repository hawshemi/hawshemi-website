---
import { Icon } from 'astro-icon/components';

const links = [
  { label: 'GitHub', href: 'https://github.com/hawshemi', icon: 'simple-icons:github' },
  { label: 'LinkedIn', href: 'https://www.linkedin.com/hawshemi?_l=en_US', icon: 'simple-icons:linkedin' },
  { label: 'X', href: 'https://x.com/hawshemi', icon: 'simple-icons:x' },
  { label: 'Instagram', href: 'https://www.instagram.com/rhawshemi/', icon: 'simple-icons:instagram' },
];
---
<ul class="flex flex-wrap items-center justify-center gap-3">
  {links.map((l) => (
    <li>
      <a 
        href={l.href} 
        target="_blank" 
        rel="noopener noreferrer"
        aria-label={l.label}
        class="flex items-center justify-center size-10 rounded-full bg-white/5 text-text-secondary hover:text-accent hover:bg-white/10 transition-all duration-200"
      >
        <Icon name={l.icon} class="size-5" />
      </a>
    </li>
  ))}
</ul>
