---
import { Icon } from 'astro-icon/components';
import Button from './Button.astro';

const { title, children, href } = Astro.props as {
  title: string;
  href?: string;
  children?: any;
};
---
<article class="glass-card interactive p-6 h-full flex flex-col justify-between">
  <div>
    <header class="mb-3 flex items-center justify-between gap-3">
      <h3 class="font-semibold text-lg text-text tracking-tight leading-snug">{title}</h3>
    </header>
    <div class="text-sm text-text-secondary leading-relaxed">
      <slot />
    </div>
    
    <div class="mt-4">
      <slot name="tags" />
    </div>
  </div>
  
  {href && (
    <div class="mt-6 pt-4 border-t border-white/10">
      <Button href={href} variant="ghost" size="sm" class="w-full rounded-lg gap-2" target="_blank" rel="noopener noreferrer">
        View Project
        <Icon name="lucide:external-link" class="size-4" />
      </Button>
    </div>
  )}
</article>
