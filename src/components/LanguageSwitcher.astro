---
const path = Astro.url.pathname;
const isFa = path.startsWith('/fa');

const enPath = isFa ? (path.replace(/^\/fa/, '') || '/') : path;
const faPath = isFa ? path : (path === '/' ? '/fa/' : `/fa${path}`);
---
<nav class="flex items-center bg-white/5 rounded-full p-1 backdrop-blur-md border border-white/5" dir="ltr">
  <a href={enPath} style="font-family: var(--font-en)" class={"w-10 py-1 rounded-full text-xs font-medium text-center transition-all duration-300 " + (!isFa ? 'bg-accent/10 text-accent shadow-[0_0_10px_rgba(125,122,255,0.2)]' : 'text-text-secondary hover:text-text hover:bg-white/5')}>EN</a>
  <a href={faPath} style="font-family: var(--font-en)" class={"w-10 py-1 rounded-full text-xs font-medium text-center transition-all duration-300 " + (isFa ? 'bg-accent/10 text-accent shadow-[0_0_10px_rgba(125,122,255,0.2)]' : 'text-text-secondary hover:text-text hover:bg-white/5')}>FA</a>
</nav>
