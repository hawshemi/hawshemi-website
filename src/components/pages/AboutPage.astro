---
import SocialLinks from '../SocialLinks.astro';
import { ui } from '../../i18n/ui';

interface Props {
  lang: 'en' | 'fa';
}

const { lang } = Astro.props;
const t = ui[lang];
---

<section class="max-w-3xl mx-auto">
  <h1 class="text-4xl font-bold tracking-tight mb-8 pb-1 text-gradient-cold">
    {t['about.title']}
  </h1>
  
  <div class="glass-card p-8 sm:p-10 prose prose-invert prose-lg max-w-none prose-headings:text-white prose-p:text-text-secondary prose-li:text-text-secondary prose-a:text-accent prose-strong:text-white">
    {t['about.intro'].split('\n\n').map((p) => <p>{p}</p>)}

    <h2>{t['about.highlights']}</h2>
    <ul>
      <li>{t['about.highlight.1']}</li>
      <li>{t['about.highlight.2']}</li>
      <li>{t['about.highlight.3']}</li>
    </ul>

    {lang === 'fa' && (
      <>
        <h2>{ui.fa['about.approach']}</h2>
        <p>{ui.fa['about.approach.text']}</p>
      </>
    )}

    <h2>{t['about.find_me']}</h2>
    <div class="not-prose mt-6">
      <SocialLinks />
    </div>
  </div>
</section>
