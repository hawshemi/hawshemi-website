---
import { Icon } from 'astro-icon/components';
import { ui } from '../../i18n/ui';
import Button from '../Button.astro';

interface Props {
  lang: 'en' | 'fa';
}

const { lang } = Astro.props;
const t = ui[lang];
---

<section class="py-20 sm:py-32 flex flex-col items-center text-center">
  <div class="mx-auto max-w-3xl">
    <h1 class="text-4xl sm:text-6xl font-bold tracking-tight text-gradient-cold pb-2">
      {t['hero.title']}
    </h1>
    <p class="mt-4 text-xl text-text font-medium">{t['hero.role']}</p>
    <p class="mt-6 text-lg text-text-secondary max-w-2xl mx-auto leading-relaxed">
      {t['hero.description']}
    </p>

    <div class="mt-10 flex flex-wrap gap-4 justify-center">
      <Button href="/resume.pdf" target="_blank" rel="noopener" variant="primary" class="gap-2">
        <Icon name="lucide:file-text" class="size-5" />
        {t['hero.resume']}
      </Button>
      <Button href="/contact" variant="ghost" class="gap-2">
        <Icon name="lucide:mail" class="size-5" />
        {t['hero.contact']}
      </Button>
    </div>
  </div>
</section>
