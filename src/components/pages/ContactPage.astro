---
import { ui } from '../../i18n/ui';
import Button from '../Button.astro';

interface Props {
  lang: 'en' | 'fa';
}

const { lang } = Astro.props;
const t = ui[lang];
---

<section class="max-w-2xl mx-auto">
  <div class="glass-card p-8 text-center">
    <h1 class="text-3xl font-bold tracking-tight mb-4">{t['contact.title']}</h1>
    <p class="text-text-secondary mb-8 text-lg">{t['contact.intro']}</p>
    <div>
      <Button href={`mailto:${t['contact.email']}`} variant="primary" size="lg">{t['contact.email']}</Button>
    </div>
  </div>
</section>
